# FastAPI 서버 설정
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production

# Redis & Celery
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Logfire (실시간 관측성)
LOGFIRE_TOKEN=your_logfire_token_here

# OpenAI (Whisper STT + DALL-E 3)
OPENAI_API_KEY=sk-proj-...

# ElevenLabs (Professional Voice Cloning)
ELEVENLABS_API_KEY=your_elevenlabs_key

# Google Services
GOOGLE_VEO_API_KEY=your_google_veo_key
GOOGLE_SHEETS_CREDENTIALS_PATH=./credentials/google_sheets_credentials.json

# YouTube Data API (썸네일 학습)
YOUTUBE_API_KEY=your_youtube_data_api_key

# Neo4j (GraphRAG 장기 메모리)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password

# Pinecone (벡터 검색)
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=us-east-1-aws
